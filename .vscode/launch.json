            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/src/redis-server",
            "args": ["${workspaceRoot}/redis.conf"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ],
            "logging": {
                //   "engineLogging": true,
                "trace": true,
                "traceResponse": true,
            },
             "preLaunchTask": "Build"
        }
